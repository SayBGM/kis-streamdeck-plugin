{
  "name": "com.kis.streamdeck",
  "version": "1.2.1",
  "description": "한국투자증권 실시간 주식 시세 Stream Deck 플러그인",
  "type": "module",
  "main": "bin/plugin.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "local:install": "npm run build && node ./scripts/install-local-plugin.mjs",
    "package:plugin": "npm run build && node ./scripts/package-streamdeck-plugin.mjs",
    "version:sync-manifest": "node ./scripts/sync-manifest-version.mjs",
    "version": "npm run version:sync-manifest && git add manifest.json",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@elgato/streamdeck": "^1.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^3.2.4",
    "rollup": "^4.28.0",
    "tslib": "^2.8.0",
    "typescript": "^5.7.0",
    "vitest": "^3.2.4"
  }
}
